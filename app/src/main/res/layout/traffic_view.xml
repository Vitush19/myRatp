<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:animateLayoutChanges="true"
    android:elevation="5dp"
    android:layout_margin="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/specialWhite"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="start"
                android:contentDescription="@string/image_vide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/line_image_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/metro" />

                    <TextView
                        android:id="@+id/title_traffic_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/title_traffic"
                        android:textColor="@color/specialBlack"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/traffic_image_view"
                        android:layout_width="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|end"
                        android:contentDescription="@string/statut" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/message_traffic_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="@string/message_traffic"
            android:textColor="@color/specialBlack"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>